<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yexuhang.internship.mapper.CcTopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yexuhang.internship.bean.CcTopic">
        <id column="topic_id" property="topicId" />
        <result column="name" property="name" />
        <result column="cover" property="cover" />
        <result column="description" property="description" />
        <result column="post_count" property="postCount" />
        <result column="follower_count" property="followerCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        topic_id, name, cover, description, post_count, follower_count
    </sql>

</mapper>
